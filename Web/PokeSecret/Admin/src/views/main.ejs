body {
    margin: 0;
    font-family: Arial, Helvetica, sans-serif;
    background-color: #4a1827ed;
    background-repeat: no-repeat;
}

.main{
    display: block;
    justify-content: center;
    align-items: center;
    height: 100%;
    text-align: center; 
}

#Welcome {
    color: #000000a7;
    font-size: 25px;
    position: fixed;
    top: 600px;
    left: 100px;

}

#name {
    position: fixed;
    top: 530px;
    left: 750px;
    padding: 0;
    margin: 0;
    color: #fff;
    font-family: "Extenda Trial 30 Deca";
    font-size: 300px;
    line-height: 0.75;
    font-weight: normal;
    font-style: normal;
    text-transform: uppercase;
}
#fearow {
    position: absolute; 
    left: -500px; 

    animation: slideIn 2s forwards;
}

@keyframes slideIn {
    from {
        left: -500px; 
        top: -500px; 
    }
    to {
        top: 10%;
        left: 650px; 
    }
}
#pokemon {
    position: absolute;
    top: 100px;
    left: 740px;
    transform: scale(0);
    animation: zoomInOut 4s forwards;
}

@keyframes zoomInOut {
    0% {
        transform: scale(0);
    }
    50% {
        transform: scale(1.2);
    }
    100% {
        transform: scale(1);
    }
}



.top{
    background-color: rgba(61, 59, 59, 0.768);
    height: 600px;
    z-index: -1;
}
.top img{
    padding: 10px;
}
.top h1{
    display: inline-block;
    position: relative;
    bottom: 6%;
    color: #fff;
}
#button{
    position: absolute;
  background-color: #8B742E;
  border: none;
  color: white;
  position: fixed;
    top: 800px;
    left:870px;
  padding: 15px 32px;
  border-radius: 10px;
  text-align: center;
  text-decoration: none;
  display: block;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;
}
#secret{
    float: right;
  background-color: #dc1010a6;
  border: none;
  color: white;
  /* position: fixed;
    top: 40px;
