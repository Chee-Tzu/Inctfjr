  padding: 15px 35px;
  border-radius: 10px;
  text-align: center;
  text-decoration: none;
  display: block;
  font-size: 16px;
  margin: 4px 2px;
  margin-right: 10px;
  margin-top: 10px;
  cursor: pointer;
}

        </style>

<script>
    function cha() {
    var xhr = new XMLHttpRequest();
    xhr.onreadystatechange = function() {
        if (xhr.readyState === XMLHttpRequest.DONE) {
            if (xhr.status === 200) {
                window.location.href = '/';
            } else {
                console.log("Error");
            }
        }
    };
    xhr.open('GET', '/change');
    xhr.send();
}
function secret(){
    window.location.href='/secret';
}
</script>
