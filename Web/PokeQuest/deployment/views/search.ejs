<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>PokeForest</title>
    <style>

body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #0a503c;
}

h1 {
    text-align: center;
    margin-top: 50px;
    color: #ffffff;
}

.mapsearch {
    padding-top: 70px;
    padding-left: 30px;
    margin-left: 10vh;
}

.mapsearch h1 {
    color: white;
}

#searchForm {
    max-width: 400px;
    margin: 20px auto;
    padding: 40px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

label {
    display: block;
    font-weight: bold;
    margin-bottom: 10px;
}

input[type="text"] {
    position: relative;
    width: 100%;
    padding: 10px;
    right: 10px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 4px;
}

button[type="submit"] {
    display: block;
    width: 100%;
    padding: 10px;
    margin-top: 10px;
    background-color: #4CAF50;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

button[type="submit"]:hover {
    background-color: #45a049;
}

#resultContainer {
    max-width: 400px;
    margin: 20px auto;
    padding: 20px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    text-align: center;
}

.bgsearch {
    margin-top: 0;
    padding-top: 0; 
    position: absolute; 
    top: 0; 
    height: 100vh;
    display: flex;
    background-image: url('map.jpg');
    width: 95vw;
    align-items: center;
    background-size: cover;
    transform: scale(1.1);
    transition: transform 0.3s ease;
}

.places {
    background-color: #fff;
    padding: 20px;
    margin-top: 120px;
    margin-left: auto;
    margin-right: 30px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    flex: 0 0 auto;
}

.places h2 {
    color: #333;
    font-size: 1.5rem;
    margin-bottom: 10px;
}

.places ul {
    list-style-type: none;
    padding: 0;
}

.places li {
    margin-bottom: 5px;
    cursor: pointer;
}

.places li:hover {
    text-decoration: underline;
}


@media only screen and (max-width: 768px) {
    .mapsearch {
        padding-top: 40px;
        padding-left: 10px;
        margin-left: 5vh;
    }

    #searchForm, #resultContainer {
        max-width: 320px;
    }

    .places {
        margin-top: 60px;
        margin-right: 10px;
    }
}

@media only screen and (max-width: 480px) {

    .mapsearch {
        padding-top: 100px;
        padding-left: 6px;
        margin-left: 1vh;
    }
    .mapsearch h1{
        position: relative;
        top: 50px;
        left: 90px;
    }

    #searchForm, #resultContainer {
        position: relative;
        top:70px;
        left: 100px;
    }

    .places {
        margin-top: -400px;
        margin-right: 5px;
    }
}

        
    </style>
</head>
<body>
    <!-- It looks like the search bar is accepting commands. -->
<header>
    <div class="container">
        <a href="/"><img src="pokeball.png" width="40px" height="auto"></a>

        <h1>PokeQuest</h1>
    </div>
</header>
<section class="search">
    <div class="bgsearch">
        <div class="mapsearch">
            <h1>Know Details of the Place</h1>
            <form id="searchForm">
                <label for="place">Enter the place:</label>
                <input type="text" id="place" name="place">
                <button type="submit">Search</button>
            </form>
            <div id="resultContainer">  
            </div>
        </div>

        <div class="places">
            <h2>Places to Explore</h2>
            <ul>
                <li>riverside</li>
                <li>waterfall</li>
                <li>meadow</li>
                <li>grotto</li>
                <li>ravine</li>
            </ul>
        </div>
    </div>
</section>
<script>
        document.getElementById('searchForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const place = document.getElementById('place').value;
            fetch('/search', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                },
                body: `place=${place}`
            })
            .then(response => response.text())
            .then(data => {
                document.getElementById('resultContainer').innerHTML = data;
            })
            .catch(error => console.error('Error:', error));
        });
    </script>
</body>
</html>
